{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
   body{
  background-image: url('https://wallpapercave.com/wp/wp3006080.jpg');
   background-size: cover;
}

        /* CSS styles directly embedded in the Twig template */
        .registration-form {
            background-color: rgba(255, 255, 255, 0.2);
            margin-top: 110px;
  margin-left: 315px;
  display: flex;
  flex-direction: column;
  width: 500px;
  padding: 10px;
  box-shadow: 1px 1px 1px 1px rgba(255, 255, 255, 0.3);
  border:1px solid transparent;
  border-radius:5px;
        }
 
        input[type="email"],
        input[type="password"], {
            width: 300px; 
            padding: 20px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box; 
            gap:10px;
            color:white;
        }

        .registration-form button {
            width: 30%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-left:165px;
            margin-top:10px;
        }
        .registration-form input::placeholder {
    color: white; /* Change the color to your desired color */
    color: rgba(255, 255, 255, 0.7);
}
        .inputWithIcon{
            gap:5px;
        }
        /* Style images */
        .user-icon {
            width: 100px; /* Adjust width as needed */
            margin-left: 200px; /* Adjust margin as needed */
        }
        h1{
            font-size:45px; 
            text-align:center;
            color:#007bff;
        }
        p{
        text-align:center;
          color:#007bff;
        }
        .email-icon,
        .password-icon {
            width: 28px; /* Adjust width as needed */
            margin-right: 10px; /* Adjust margin as needed */
            margin-top:5px;
        }
          .inputWithIcon{
            display:flex;
            flex-direction:row;
           justify-content:center;
           align-items:center;
           
        }
        .inputWithIcon1{
            margin-top:20px;
          display:flex;
            flex-direction:row;
           justify-content:center;
           align-items:center;
        }
        label{
            margin-left:115px;
            color:white;
        }
        /* Optional: Style error messages */
        .form-error {
            color: red;
            margin-top: 5px;
            font-size: 12px;
        } 
    </style>
{% endblock %}

{% block body %}
<form class="registration-form" method="post">
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
{% endif %}

<h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

<div class="inputWithIcon">
    <img class="email-icon" src="{{ asset('images/email-icon.png') }}" alt="Email Icon">
<input type="email" placeholder="Enter your email" name="email" id="inputEmail" class="form-control"  autocomplete="email" required autofocus style="width: 300px; height: 30px; background-color: transparent; border: solid 1px #007bff; padding: 5px;
  border-radius:5px;color:white;">
</div>


<div class="inputWithIcon1">
    <img class="password-icon" src="{{ asset('images/password-icon.jpg') }}" alt="Password Icon">
    <input type="Password" placeholder="Enter your password" name="password" id="inputPassword" class="form-control" autocomplete="Password" required autofocus style="width: 300px; height: 30px; background-color: transparent; border: solid 1px #007bff; padding: 5px;border-radius:5px;color:white">
</div>


<input type="hidden" name="_csrf_token"
       value="{{ csrf_token('authenticate') }}"
>

<div class="checkbox mb-3">
    <label>
        <input type="checkbox" name="_remember_me"> Remember me
    </label>
</div>

<button class="btn btn-lg btn-primary" type="submit">
    Sign in
</button>
</form>
{% endblock %}
