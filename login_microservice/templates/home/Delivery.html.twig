{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Delivery Planning{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .delivery-form, .intro, .contact {
            background: rgba(0, 0, 0, 0.7);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .delivery-form h1, .intro h2, .contact h2 {
            color: #fff;
        }
        .delivery-form label, .intro p, .contact p {
            color: #fff;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 intro">
                <h2>Welcome to Our Delivery Service</h2>
                <p>We provide fast and reliable delivery services to ensure your packages reach their destination on time. Our advanced route optimization ensures efficiency and cost-effectiveness.</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8 contact">
                <h2>Contact Us</h2>
                <p>If you have any questions or need assistance, please contact us:</p>
                <ul>
                    <li>Email: support@deliveryservice.com</li>
                    <li>Phone: +123 456 7890</li>
                    <li>Address: 123 Delivery St, City, Country</li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
