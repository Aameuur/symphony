{# templates/coli/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Create New Coli{% endblock %}

{% block body %}
    <div class="container">
        <h1>Create New Coli</h1>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.reference, 'Reference', {'class': 'form-label'}) }}
            {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.typeDeColi, 'Type de Coli', {'class': 'form-label'}) }}
            {{ form_widget(form.typeDeColi, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.categories, 'Categories', {'class': 'form-label'}) }}
            {{ form_widget(form.categories, {'attr': {'class': 'form-control'}}) }}
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
