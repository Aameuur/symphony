{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
    
    
   body{
    
    
  background-image: url('https://wallpapercave.com/wp/wp3006080.jpg');
   background-size: cover;
}

        /* CSS styles directly embedded in the Twig template */
        .registration-form {
            background-color: rgba(255, 255, 255, 0.2);
            margin-top: 110px;
  margin-left: 315px;
  display: flex;
  flex-direction: column;
  width: 500px;
  padding: 10px;
  box-shadow: 1px 1px 1px 1px rgba(255, 255, 255, 0.3);
  border:1px solid transparent;
  border-radius:5px;
        }
 
        input[type="email"],
        input[type="password"], {
            color: #fff;
            width: 300px; 
            padding: 20px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box; 
            gap:10px;
        }

        .registration-form button {
            width: 30%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-left:165px;
            margin-top:10px;
        }
        .registration-form input::placeholder {
    color: white; /* Change the color to your desired color */
}
        .inputWithIcon{
            gap:5px;
        }
        /* Style images */
        .user-icon {
            width: 100px; /* Adjust width as needed */
            margin-left: 200px; /* Adjust margin as needed */
        }
        h1{
            font-size:45px; 
            text-align:center;
            color:#007bff;
        }
        p{
        text-align:center;
          color:#007bff;
        }
        .email-icon,
        .password-icon {
            width: 28px; /* Adjust width as needed */
            margin-right: 10px; /* Adjust margin as needed */
            margin-top:5px;
        }
          .inputWithIcon{
            display:flex;
            flex-direction:row;
           justify-content:center;
           align-items:center;
           
        }
        .inputWithIcon1{
            margin-top:20px;
          display:flex;
            flex-direction:row;
           justify-content:center;
           align-items:center;
        }
        label{
            margin-left:115px;
            color:white;
        }
        /* Optional: Style error messages */
        .form-error {
            color: red;
            margin-top: 5px;
            font-size: 12px;
        } 
    </style>
{% endblock %}

{% block body %}
    <div class="registration-form">
       
        <h1>Register</h1>
        <p>Enter your credentiels.</p>
        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            <div class="inputWithIcon">
              <img class="email-icon" src="{{ asset('images/email-icon.png') }}" alt="Email Icon">
              {{ form_widget(registrationForm.email, {'attr': {'style': 'width: 300px; height: 30px;background-color:transparent;border:solid 1px #007bff;padding:5px; border-radius: 5px;','placeholder': 'Enter your email'}}) }}
            </div>

            <div class="inputWithIcon1">
                <img class="password-icon" src="{{ asset('images/password-icon.jpg') }}" alt="Password Icon">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'style': 'width: 300px; height: 30px;background-color:transparent;border:solid 1px #007bff;padding:5px; border-radius: 5px; ', 'placeholder': 'Enter your password'}}) }}

              </div>
             {{ form_row(registrationForm.agreeTerms,{'attr': {'style': 'margin-top:20px;margin-left:10px;'}}) }}

             <button type="submit" class="btn">Register</button>
              {{ form_end(registrationForm) }}
             </div>
{% endblock %}
