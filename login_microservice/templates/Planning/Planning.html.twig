{% extends 'base.html.twig' %}

{% block title %}
    {% if form.vars.data.id is defined %}
        Edit Planning
    {% else %}
        Create Planning
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Your custom styles */
    </style>
    {# Include Flatpickr CSS #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Include Flatpickr JS #}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            flatpickr('.datetimepicker', {
                enableTime: true,
                dateFormat: "Y-m-d H:i",
            });

            const wilayaSelect = document.querySelector('select[name="planning[deliveryAddress]"]');
            const postalCodeInput = document.querySelector('input[name="planning[postalCode]"]');

            const wilayas = {
                'Tunis': '1000',
                'Sfax': '3000',
                'Sousse': '4000',
                'Ettadhamen': '2061',
                'Kairouan': '3100',
                'Gabes': '6000',
                'Bizerte': '7000',
                'Ariana': '2037',
                'Gafsa': '2100',
                'La Goulette': '2060',
                'Monastir': '5000',
                'Medenine': '4100',
                'Ben Arous': '2013',
                'Kasserine': '1200',
                'Nabeul': '8000',
                'Beja': '9000',
                'Mahdia': '5100',
                'Kelibia': '8090',
                'Jendouba': '8100',
                'Zarzis': '4170',
                'Hammamet': '8050',
                'El Kef': '7100',
                'Kebili': '4200',
                'Siliana': '6100'
            };

            // Function to update postal code based on selected wilaya
            function updatePostalCode() {
                const selectedWilaya = wilayaSelect.value;
                postalCodeInput.value = wilayas[selectedWilaya] || '';
            }

            // Initialize postal code on page load
            updatePostalCode();

            // Listen for changes in delivery address select
            wilayaSelect.addEventListener('change', updatePostalCode);
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                    <h1 class="form-title">
                        {% if form.vars.data.id is defined %}
                            Edit Planning
                        {% else %}
                            Create Planning
                        {% endif %}
                    </h1>
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.deliveryDate, 'Delivery Date and Time', {'class': 'form-label'}) }}
                        {{ form_widget(form.deliveryDate, {'attr': {'class': 'form-control datetimepicker'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.deliveryAddress, 'Delivery Address', {'class': 'form-label'}) }}
                        {{ form_widget(form.deliveryAddress, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.postalCode, 'Postal Code', {'class': 'form-label'}) }}
                        {{ form_widget(form.postalCode, {'attr': {'class': 'form-control', 'readonly': 'readonly'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.reference, 'Reference', {'class': 'form-label'}) }}
                        {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.agent, 'Agent', {'class': 'form-label'}) }}
                        {{ form_widget(form.agent, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary submit-btn">Save</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
