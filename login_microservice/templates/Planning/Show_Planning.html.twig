{% extends 'base.html.twig' %}

{% block title %}Agents{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Wrapper */
        .example-wrapper {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 2px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            width: fit-content; /* Adjusted width */
        }
        
        /* Dashboard Title */
        .dashboard-title {
            font-size: 28px;
            color: #007bff;
            margin-bottom: 20px;
            text-align: center;
        }
        
        /* Add Agent Button */
        .add-agent-button {
            display: block;
            width: 150px;
            margin: 0 auto 20px;
            font-size: 16px;
            text-align: center;
        }
        
        /* Table */
        .table {
            background-color: rgba(255, 255, 255, 0.9);
            margin: 0 auto; /* Center the table */
            width: 100%; /* Full width */
            max-width: 100%; /* Maximum width */
        }
        .table th, .table td {
            color: #000;
            vertical-align: middle;
        }
        
        /* Action Buttons */
        .action-buttons {
            display: flex;
            justify-content: center;
        }
        .action-buttons a, .action-buttons button {
            margin-right: 10px;
        }
        .action-buttons a:last-child, .action-buttons button:last-child {
            margin-right: 0;
        }
        
        /* Buttons */
        .btn {
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            text-transform: uppercase;
            transition: background-color 0.3s ease;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }
        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            color: #fff;
        }
        .btn-primary:hover, .btn-danger:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h2 class="dashboard-title">List of Planning</h2>
    <a href="{{ path('planning_create', {}) }}" class="btn btn-primary btn-sm">Add Planning</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Agent</th>
                <th>Depart Adress</th>
                <th>Delivery Adress</th>
                <th>Date</th>
                <th>Reference</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
         {% for p in plannings %}
                <tr>
                    <td>{{ p.id }}</td>
            <td>{{ p.agent.firstName }}</td>
            <td>{{ p.departAddress.name }}</td>
            <td>{{ p.deliveryAddress is not null ? p.deliveryAddress.name : 'N/A' }}</td> {# Add a null check #}
            <td>{{ p.deliveryDate|date('Y-m-d H:i') }}</td>
<td>{{ p.reference is not null ? p.reference.reference : 'No Reference' }}</td> {# Add a null check #}

                    <td>{{ p.description }}</td>
                    <td>
                        <a href="{{ path('planning_edit', { 'id': p.id }) }}" class="btn btn-primary btn-sm">Edit</a>
                        <button class="btn btn-danger btn-sm" onclick="deletePlanning({{ p.id }})">Delete</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<script>
function deletePlanning(planningId) {
    if (confirm('Are you sure you want to delete this planning?')) {
        fetch(`/planning/delete/${planningId}`, { // Add the slash before planningId
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => {
            if (response.ok) {
                alert('Planning deleted successfully');
                window.location.reload();
            } else {
                alert('Failed to delete planning');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('An error occurred while trying to delete the planning');
        });
    }
}

</script>
{% endblock %}
    